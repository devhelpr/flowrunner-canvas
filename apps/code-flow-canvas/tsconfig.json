{
	"compilerOptions": {
	  "jsx":"react-jsx",
	  "target": "es2018",
	  "noImplicitAny": false,
	  "module": "esnext",
	  "removeComments": true,
	  "moduleResolution":"node",
	  "outDir": "./lib",
	  "strict": true,
	  "allowJs": true,
	  "esModuleInterop": true,
	  "sourceMap": true,
	  "declaration": true,
	  "skipLibCheck": true,

	  "noEmit": true,
	  "baseUrl": ".",
	  "rootDir": "src"
	},
  "references": [
	{
		"path" : "../../packages/flowrunner-canvas"
	},
	{
		"path" : "../../packages/flowrunner-canvas-core"
	},
	{
		"path" : "../../packages/flowrunner-canvas-ui-view"
	}	
],
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]	
  }